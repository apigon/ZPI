<resources>

    <!-- Base application theme. -->
    <style name="DarkTheme" parent="android:Theme.Black.NoTitleBar">
        <item name="android:buttonStyle">
                @style/DarkButton
        </item>
    </style>

    <style name="LightTheme" parent="android:Theme.Light.NoTitleBar">
        <item name="android:buttonStyle">@style/LightButton</item>
    </style>

    <style name="DarkButton" parent="android:style/Widget.Button">
        <item name="android:background">@color/kol1</item>
    </style>

    <style name="LightButton" parent="android:style/Widget.Button">
        <item name="android:background">@color/kol6</item>
        <item name="android:textColor">@color/kol2</item>
    </style>
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
</resources>
