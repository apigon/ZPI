<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    tools:context="${relativePackage}.${activityClass}"
    android:background="@color/kol4"
    android:alpha="1">

    <include android:id="@+id/app_bar" layout="@layout/app_bar"/>

    <ImageView
        android:layout_width="@dimen/editProfile_photoWidth"
        android:layout_height="@dimen/editProfile_photoHeight"
        android:id="@+id/imageView"
        android:background="@color/white"
        android:layout_below="@+id/app_bar"
        android:layout_marginTop="15dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/editProfile_login"
        android:id="@+id/editProfile_login"
        android:textColor="@color/kol1"
        android:layout_below="@+id/imageView"
        android:layout_alignLeft="@+id/imageView"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginTop="25dp"
        android:textSize="@dimen/editProfile_fontSize_2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/editProfile_login_content"
        android:layout_above="@+id/editProfile_email"
        android:layout_toRightOf="@+id/editProfile_phone"
        android:layout_toEndOf="@+id/editProfile_phone"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/kol1"
        android:textSize="@dimen/editProfile_fontSize_2"
        android:paddingTop="0dp"
        android:paddingBottom="2dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/editProfile_email"
        android:id="@+id/editProfile_email"
        android:textColor="@color/kol1"
        android:layout_below="@+id/editProfile_login"
        android:layout_alignLeft="@+id/editProfile_login"
        android:layout_alignStart="@+id/editProfile_login"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/editProfile_fontSize_2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editProfile_email_content"
        android:layout_alignTop="@+id/editProfile_email"
        android:layout_alignLeft="@+id/editProfile_login_content"
        android:layout_alignStart="@+id/editProfile_login_content"
        android:layout_above="@+id/editProfile_phone"
        android:textColor="@color/kol1"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/editProfile_fontSize_2"
        android:paddingTop="0dp"
        android:paddingBottom="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/editProfile_phone"
        android:id="@+id/editProfile_phone"
        android:textColor="@color/kol1"
        android:layout_below="@+id/editProfile_email"
        android:layout_alignLeft="@+id/editProfile_email"
        android:layout_alignStart="@+id/editProfile_email"
        android:layout_marginTop="10dp"
        android:textSize="@dimen/editProfile_fontSize_2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editProfile_phone_content"
        android:layout_alignLeft="@+id/editProfile_email_content"
        android:layout_alignStart="@+id/editProfile_email_content"
        android:layout_above="@+id/editProfile_newPass"
        android:textColor="@color/kol1"
        android:layout_marginRight="15dp"
        android:layout_alignTop="@+id/editProfile_phone"
        android:textSize="@dimen/editProfile_fontSize_2"
        android:paddingBottom="2dp"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editProfile_name"
        android:id="@+id/editProfile_name"
        android:textColor="@color/kol1"
        android:textSize="@dimen/editProfile_fontSize_1"
        android:layout_alignTop="@+id/imageView"
        android:layout_toRightOf="@+id/editProfile_newPass"
        android:layout_toEndOf="@+id/editProfile_newPass"
        android:layout_marginBottom="5dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editProfile_name_content"
        android:layout_alignTop="@+id/editProfile_name"
        android:layout_toRightOf="@+id/editProfile_surname"
        android:layout_toEndOf="@+id/editProfile_surname"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/kol1"
        android:textSize="@dimen/editProfile_fontSize_1"
        android:layout_alignBottom="@+id/editProfile_name"
        android:paddingBottom="2dp"
        android:paddingTop="0dp"
        android:paddingRight="0dp"
        android:paddingLeft="0dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editProfile_surname"
        android:id="@+id/editProfile_surname"
        android:layout_below="@+id/editProfile_name"
        android:layout_alignLeft="@+id/editProfile_name"
        android:layout_alignStart="@+id/editProfile_name"
        android:textColor="@color/kol1"
        android:textSize="@dimen/editProfile_fontSize_1" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editProfile_surname_content"
        android:textColor="@color/kol1"
        android:textSize="@dimen/editProfile_fontSize_1"
        android:layout_alignTop="@+id/editProfile_surname"
        android:layout_alignLeft="@+id/editProfile_name_content"
        android:layout_alignStart="@+id/editProfile_name_content"
        android:layout_alignBottom="@+id/editProfile_surname"
        android:layout_marginRight="15dp"
        android:paddingBottom="2dp"
        android:paddingTop="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editProfile_btn_changePhoto"
        android:id="@+id/editProfile_btn_changePhoto"
        android:textColor="@color/kol3"
        android:clickable="true"
        android:singleLine="true"
        android:background="@color/kol1"
        android:textStyle="italic"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignLeft="@+id/editProfile_surname"
        android:layout_alignStart="@+id/editProfile_surname" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/editProfile_newPass"
        android:id="@+id/editProfile_newPass"
        android:layout_below="@+id/editProfile_phone"
        android:layout_alignLeft="@+id/editProfile_phone"
        android:layout_alignStart="@+id/editProfile_phone"
        android:layout_marginTop="40dp"
        android:textColor="@color/kol1"
        android:textSize="@dimen/editProfile_fontSize_2"
        android:layout_marginBottom="10dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/EditProfile_newPass_content"
        android:layout_alignTop="@+id/editProfile_newPass"
        android:textColor="@color/kol1"
        android:layout_marginRight="15dp"
        android:textSize="@dimen/editProfile_fontSize_2"
        android:layout_alignBottom="@+id/editProfile_newPass"
        android:paddingTop="0dp"
        android:paddingBottom="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:layout_toRightOf="@+id/editProfile_newPassRep"
        android:layout_toEndOf="@+id/editProfile_newPassRep"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/editProfile_newPassRep"
        android:id="@+id/editProfile_newPassRep"
        android:layout_below="@+id/editProfile_newPass"
        android:layout_alignLeft="@+id/editProfile_newPass"
        android:layout_alignStart="@+id/editProfile_newPass"
        android:textColor="@color/kol1"
        android:textSize="@dimen/editProfile_fontSize_2" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editProfile_newPassRep_content"
        android:textColor="@color/kol1"
        android:textSize="@dimen/editProfile_fontSize_2"
        android:layout_alignTop="@+id/editProfile_newPassRep"
        android:layout_alignLeft="@+id/EditProfile_newPass_content"
        android:layout_alignStart="@+id/EditProfile_newPass_content"
        android:layout_alignBottom="@+id/editProfile_newPassRep"
        android:layout_marginRight="15dp"
        android:paddingTop="0dp"
        android:paddingBottom="2dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editProfile_btn_confirm"
        android:id="@+id/editProfile_btn_accept"
        android:layout_marginBottom="15dp"
        android:background="@color/kol1"
        android:textColor="@color/kol3"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>