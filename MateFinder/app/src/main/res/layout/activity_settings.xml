<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/DrawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="7dp"
    tools:context="pl.mf.zpi.matefinder.SettingsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent">

                <CheckBox
                    android:id="@+id/notification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/internet"
                    android:layout_marginLeft="20dp"
                    android:checked="false"
                    android:padding="10dp"
                    android:paddingTop="?android:attr/actionBarSize"
                    android:text="@string/settings_sounds" />

                <CheckBox
                    android:id="@+id/internet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="70dp"
                    android:checked="false"
                    android:padding="10dp"
                    android:text="@string/settings_transfer" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignTop="@+id/navigation"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="15dp"
                    android:text="@string/settings_nav"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/navigation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/notification"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="43dp"
                    android:layout_toEndOf="@+id/textView2"
                    android:entries="@array/settings_choose_nav"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/layout"
                    android:layout_alignLeft="@+id/textView"
                    android:layout_alignStart="@+id/textView"
                    android:layout_alignTop="@+id/layout"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="@string/settings_motive"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Spinner
                    android:id="@+id/layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/navigation"
                    android:layout_alignStart="@+id/navigation"
                    android:layout_below="@+id/navigation"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="40dp"
                    android:entries="@array/settings_choose_motive"
                    android:spinnerMode="dropdown" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/textView2"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="10dp"
                    android:layout_toLeftOf="@+id/radius"
                    android:layout_toStartOf="@+id/radius"
                    android:padding="15dp"
                    android:text="@string/settings_radious"
                    android:textAppearance="?android:attr/textAppearanceMedium" />

                <Button
                    android:id="@+id/button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/radius"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="20dp"
                    android:padding="10dp"
                    android:text="@string/settings_save_btn" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/radius"
                    android:layout_marginLeft="30dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="52dp"
                    android:layout_toEndOf="@+id/radius"
                    android:layout_toRightOf="@+id/radius"
                    android:text="km"
                    android:textAppearance="?android:attr/textAppearanceSmall" />

                <NumberPicker
                    android:id="@+id/radius"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/internet"
                    android:layout_alignRight="@+id/internet"
                    android:layout_alignTop="@+id/textView3"
                    android:maxHeight="120dp"
                    android:minHeight="60dp"
                    android:minWidth="50dp" />
            </RelativeLayout>
        </ScrollView>

        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerView"
        android:layout_width="270dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="@color/white"
        android:scrollbars="vertical" />

</android.support.v4.widget.DrawerLayout>
