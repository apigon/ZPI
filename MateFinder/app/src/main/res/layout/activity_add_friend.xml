<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pl.mf.zpi.matefinder.AddFriendActivity"
    android:orientation="vertical">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/put_friend_login"
            android:id="@+id/textView5"
            android:layout_below="@+id/app_bar"
            android:layout_alignLeft="@+id/dodaj_do_znajomych"
            android:layout_alignStart="@+id/dodaj_do_znajomych"
            android:layout_marginTop="40dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/login"
            android:hint="@string/add_friend_login_znajomego"
            android:maxLength="15"
            android:padding="20dp"
            android:singleLine="true"
            android:inputType="textCapSentences"
            android:layout_gravity="center"
            android:layout_below="@+id/textView5"
            android:layout_alignRight="@+id/textView5"
            android:layout_alignEnd="@+id/textView5"
            android:layout_marginTop="30dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dodaj_do_znajomych"
            android:text="@string/add_friend_dodaj"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
        <include
            android:id="@+id/app_bar"
            layout="@layout/app_bar" />
    </RelativeLayout>

</LinearLayout>
